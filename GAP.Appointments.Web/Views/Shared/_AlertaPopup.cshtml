@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";

    ViewBag.PopupId = "alertaPopup";
    ViewBag.PopupTitle = "Alerta";
}

@section PopupBody {
    <div class="row">
        <div class="col-md-2">
            <img src="#" id="imgIconoAlerta" style="width: 64px; height: 64px;" />
        </div>
        <div class="col-md-10">
            <h5 id="labMensajeAlerta" class="control-label"></h5>
        </div>
    </div>
}

@section PopupFooter {
    <button id="btnAceptarAlerta" type="button" class="btn btn-sm btn-default">
        <span class="fa fa-check" aria-hidden="true"></span>
        Aceptar
    </button>
    <button id="btnCancelarAlerta" type="button" class="btn btn-sm btn-default" data-dismiss="modal">
        <span class="fa fa-times" aria-hidden="true"></span>
        Cancelar
    </button>
}